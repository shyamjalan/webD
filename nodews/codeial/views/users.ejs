<link rel="stylesheet" href="/css/users.css">
<img src="<%= user.avatar ? user.avatar : '/images/default-avatar.png'%>" width = '100' alt="<%= user.name %>'s Avatar" style="margin: 5px;">
<% if(user.id == profile_user.id){ %> 
    <!-- If user matches, the show the update form -->
    <form action="/users/update/<%= user.id %>" enctype="multipart/form-data" method="post" id = "uploadForm">
        <input type="text" name="name" placeholder="Your Name" value="<%= user.name %>" required>
        <input type="email" name="email" placeholder="Your Email" value="<%= user.email %>" required>
        <input type="file" name="avatar" id = "file" placeholder="Profile Picture">
        <input type="submit" value="Update">
    </form>
<% } else { %> 
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
<% } %>
<script src="/js/users.js"></script>