<h1>
    <%= title %>
</h1>
<section id = "feed-posts">
    <% if(locals.user){ %>
        <h4>Posts</h4>
        <form action="/posts/create" id = "new-post-form" method = "POST">
            <textarea name="content" cols="30" rows="3" placeholder="What's on your mind? <%= user.name.substr(0,user.name.indexOf(' ')) %>" required></textarea>
            <input type="submit" value="Post">
        </form>
    <% } %> 

    <div id = "posts-list-container">
        <ul>
            <% for (post of posts){ %>
                <li>
                    <p>
                        <%= post.content %>   
                        <% if(locals.user && locals.user.id == post.user.id){ %>
                            <a href="/posts/destroy/<%= post._id %>"><i class="fas fa-times-circle"></i></a>
                        <% } %> 
                        <br> 
                        <small>
                            <%= post.user.name %>
                        </small>
                    </p>
                    <div class = 'post-comments'>
                    <% if(locals.user){ %>
                            <form action="/comments/create" id = "new-comment-form" method = "POST">
                                <textarea name="content" cols="30" rows="1" placeholder="Add your comment..." required></textarea>
                                <input type="hidden" name="post" value="<%= post._id %>">
                                <input type="submit" value="Comment">
                            </form>
                    <% } %> 
                        <div class = 'comments-list'>
                            <ul id = 'post-comments-<%= post._id %>'>
                                <% for (comment of post.comments) { %>
                                    <p>
                                        <%= comment.content %>
                                        <% if(locals.user && ((locals.user.id == comment.user.id) || (locals.user.id == post.user.id))){ %>
                                            <a href="/comments/destroy/?id=<%= comment._id %>&postUserId=<%= post.user.id %>"><i class="fas fa-times-circle"></i></a>
                                        <% } %> 
                                        <br>
                                        <small>
                                            <%= comment.user.name %>
                                        </small>
                                    </p>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</section>